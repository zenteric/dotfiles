#term xterm
termcapinfo xterm ti@:te@
#idle 3600 lockscreen
#shelltitle "login"
#hardstatus alwayslastline "%?%{kw}%-Lw%?%{wk}%n*%f %t%?(%u)%?%?%{kw}%+Lw%?%= [%Y-%m-%d %c]"
hardstatus alwayslastline "%t"
